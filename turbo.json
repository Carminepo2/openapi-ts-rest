{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["tsconfig.json"],
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^build"]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist"]
    },
    "test": {
      "dependsOn": ["^build"]
    },
    "lint": {
      "cache": false,
      "persistent": true
    }
  }
}
