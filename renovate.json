{
  "extends": ["config:base"],
  "prConcurrentLimit": 5,
  "packageRules": [
    {
      "groupName": "all minor and patch updates",
      "matchUpdateTypes": ["minor", "patch"]
    },
    {
      "groupName": "playground dependencies",
      "matchPaths": ["apps/playground/**"],
      "labels": ["playground", "dependencies"]
    }
  ],
  "rangeStrategy": "auto"
}
